    <style>
      body {
        display: flex;
        justify-content: center;
        margin: 50px;
        background: linear-gradient(
          0.5turn,
          rgb(217, 217, 232),
          rgb(131, 1, 244)
        );
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
      }
      h1 {
        width: 300px;
        padding: 5px;
        color: white;
        background-color: rgb(186, 17, 228);
        text-align: center;
        border-radius: 3px;
        margin-bottom: 50px;
      }

     

      .add {
        
        border-radius: 50%;
        background-color: rgb(186, 17, 228);
        padding: 15px;
        color: white;
        border:none;
      }
      ul{
        list-style: none;
        padding: 0;
        margin-bottom: 0;
        
       

      }

      li{
        padding: 15px;
        border-bottom:solid grey 0.5px;
      }
      input{
        margin-right: 10px;
      }

      .card-footer{
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: white;
        border: none;
        
      }

      .cross{
        text-decoration: line-through;
        text-decoration-line:purple;
      }
      .addmore{
        height: 3rem;
        border: none;
        outline: none;
      }
      
    </style>
    
